          {
            "LoadBalancerPort": "8000",
            "InstancePort": "8000",
            "Protocol": "tcp"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {"Ref": "SplunkSearchHeadSecurityGroup"}
        ],
        "Subnets": [
          {"Ref": "PublicSubnet1ID"},
          {"Ref": "PublicSubnet2ID"}
        ],
        "HealthCheck": {
          "Target": "TCP:8000",
          "HealthyThreshold": "2",
          "UnhealthyThreshold": "3",
          "Interval": "30",
          "Timeout": "5"
        }
      }
    },

    "SplunkSHCLoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Condition": "CreateSHC",
      "Properties": {
        "Instances": [
          { "Ref": "SplunkSHCMember1" },
          { "Ref": "SplunkSHCMember2" },
          { "Ref": "SplunkSHCMember3" }
        ],
        "Listeners": [
          {
            "LoadBalancerPort": "8000",
            "InstancePort": "8000",
            "Protocol": "tcp"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          { "Ref": "SplunkSecurityGroup" },
          { "Ref": "SplunkSearchHeadSecurityGroup" }
        ],
        "Subnets": [
          { "Ref": "PublicSubnet1ID" },
          { "Ref": "PublicSubnet2ID" }
        ],
        "HealthCheck": {
          "Target": "TCP:8089",
          "HealthyThreshold": "2",
          "UnhealthyThreshold": "3",
          "Interval": "30",
          "Timeout": "5"
